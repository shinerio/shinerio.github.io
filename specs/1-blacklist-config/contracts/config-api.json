{
  "openapi": "3.0.0",
  "info": {
    "title": "Obsidian Blog Generator Configuration API",
    "version": "1.0.0",
    "description": "API specification for configuring the Obsidian Blog Generator, including the blacklist feature"
  },
  "paths": {},
  "components": {
    "schemas": {
      "BlogConfig": {
        "type": "object",
        "required": ["vaultPath", "outputPath", "siteTitle"],
        "properties": {
          "vaultPath": {
            "type": "string",
            "description": "Path to the Obsidian vault directory",
            "example": "./vault"
          },
          "outputPath": {
            "type": "string",
            "description": "Path where the generated blog will be saved",
            "example": "./dist"
          },
          "backupPath": {
            "type": "string",
            "description": "Path for backup operations (optional)",
            "example": "./backup"
          },
          "backupMode": {
            "type": "boolean",
            "description": "Whether to enable backup mode",
            "default": false
          },
          "siteTitle": {
            "type": "string",
            "description": "Title of the blog site",
            "example": "My Obsidian Blog"
          },
          "siteDescription": {
            "type": "string",
            "description": "Description of the blog site",
            "example": "A blog generated from Obsidian notes"
          },
          "author": {
            "type": "string",
            "description": "Author of the blog",
            "example": "Jane Doe"
          },
          "theme": {
            "type": "string",
            "enum": ["light", "dark", "auto"],
            "description": "Theme preference for the blog",
            "default": "auto"
          },
          "postsPerPage": {
            "type": "integer",
            "description": "Number of posts to display per page",
            "default": 10,
            "minimum": 1
          },
          "blacklist": {
            "type": "array",
            "description": "Array of file and folder paths to exclude from processing",
            "items": {
              "type": "string",
              "description": "Glob pattern or path to exclude",
              "example": [
                "drafts/",
                "*.tmp.md",
                "**/private/**"
              ]
            },
            "default": []
          }
        }
      },
      "FileScanResult": {
        "type": "object",
        "properties": {
          "files": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of file paths discovered in the vault that are not in the blacklist"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "filePath": {
                  "type": "string"
                },
                "error": {
                  "type": "string"
                },
                "type": {
                  "type": "string",
                  "enum": ["permission", "not_found", "invalid_format", "other"]
                }
              }
            }
          },
          "totalSize": {
            "type": "integer",
            "description": "Total size of all discovered files in bytes"
          }
        }
      }
    }
  }
}