{
  "templates": {
    "layout": "layout.html",
    "index": "index.html",
    "articles": "articles.html",
    "article": "article.html",
    "search": "search.html"
  },
  "components": {
    "articleCard": "components/article-card.html",
    "articleListItem": "components/article-list-item.html"
  },
  "assets": {
    "css": "assets/css/style.css",
    "js": "assets/js/main.js"
  },
  "settings": {
    "templateEngine": "handlebars",
    "minifyHTML": true,
    "minifyCSS": true,
    "minifyJS": true,
    "generateSourceMaps": false
  },
  "responsive": {
    "breakpoints": {
      "mobile": "767px",
      "tablet": "768px",
      "desktop": "1024px",
      "large": "1200px"
    },
    "touchTargetSize": "44px"
  },
  "features": {
    "darkMode": true,
    "search": true,
    "tableOfContents": true,
    "codeCopy": true,
    "imageLightbox": true,
    "socialShare": true,
    "printStyles": true
  }
}